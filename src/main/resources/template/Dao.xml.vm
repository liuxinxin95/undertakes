<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="${package}.dao.${className}Dao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="${package}.entity.${className}" id="${lowClassName}Map">
        #foreach($column in $columns)
            <result property="${column.lowAttrName}" column="${column.columnName}"/>
        #end
    </resultMap>

    <select id="queryObject" resultMap="${lowClassName}Map">
        select *
        from ${tableName} where ${pk.columnName} = #{value}
    </select>

    <select id="queryList" resultMap="${lowClassName}Map">
        select * from ${tableName}
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by ${pk.columnName} desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <insert id="save" parameterType="${package}.entity.${className}"#if($pk.extra == 'auto_increment')
            useGeneratedKeys="true" keyProperty="$pk.lowAttrName"#end>
        insert into ${tableName}
        <trim prefix="(" suffix=")" suffixOverrides=",">
            #foreach($column in $columns)
                <if test="$column.lowAttrName != null">
                    `$column.columnName`,
                </if>
            #end
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="$column.lowAttrName != null">
                #{$column.lowAttrName},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="${package}.entity.${className}">
        update ${tableName}
        <set>
            #foreach($column in $columns)
                #if($column.columnName != $pk.columnName)
                    <if test="$column.lowAttrName != null">
                        `$column.columnName` = #{$column.lowAttrName}
                        #if($velocityCount != $columns.size()),
                        #end
                    </if>
                #end
            #end
        </set>
        where ${pk.columnName} = #{${pk.lowAttrName}}
    </update>

    <delete id="delete">
        delete from ${tableName} where ${pk.columnName} = #{value}
    </delete>

    <delete id="deleteBatch">
        delete from ${tableName} where ${pk.columnName} in
        <foreach item="${pk.lowAttrName}" collection="array" open="(" separator="," close=")">
            #{${pk.lowAttrName}}
        </foreach>
    </delete>

</mapper>